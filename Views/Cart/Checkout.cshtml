@model SneakerShop.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container" style="margin-top:150px; max-width:600px;">
    <h2 class="mb-3">Thông tin thanh toán</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <form method="post" action="/Cart/ProcessCheckout">

        <div class="mb-3">
            <label>Họ tên</label>
            <input name="FullName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Email</label>
            <input name="Email" type="email" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Địa chỉ nhận hàng</label>
            <textarea name="Address" class="form-control" required></textarea>
        </div>

        <button class="btn btn-success w-100">Xác nhận địa chỉ giao hàng</button>
    </form>
</div>
