@model SneakerShop.Models.User

<div class="container mt-5" style="max-width: 600px;">

    <h2 class="text-center mb-4">Thông tin tài khoản</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <form method="post" action="/User/UpdateProfile">

        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="mb-3">
            <label class="form-label">Họ tên</label>
            <input name="FullName" value="@Model.FullName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Email (không thể sửa)</label>
            <input value="@Model.Email" class="form-control" disabled />
        </div>

        <div class="mb-3">
            <label class="form-label">Số điện thoại</label>
            <input name="Phone" value="@Model.Phone" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Địa chỉ</label>
            <textarea name="Address" class="form-control">@Model.Address</textarea>
        </div>

        <button class="btn btn-primary w-100">Cập nhật</button>
    </form>

    <div class="text-center mt-4">
        <a href="/Auth/Logout" class="btn btn-danger">Đăng xuất</a>
    </div>

</div>
