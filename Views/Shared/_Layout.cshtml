@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewData["Title"] - Strength Community</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <link rel="stylesheet" href="~/css/Style.css" />

    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/cart.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>

<body>
    <!--   HEADER      -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm fixed-top">
        <div class="container-fluid px-4">

            <!-- LOGO -->
            <a class="navbar-brand fw-bold" href="/">
                SNEAKER SHOP
            </a>

            <!-- NÚT MENU MOBILE (HAMBURGER) -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- MENU -->
            <div class="collapse navbar-collapse" id="mainNavbar">

                <!-- LEFT MENU -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                    <li class="nav-item">
                        <a class="nav-link" href="/">Trang chủ</a>
                    </li>

                    <!-- SHOP DROPDOWN -->
                    <div>
                        <li class="dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="shopDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Sản phẩm
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="shopDropdown" style="min-width: 180px;">
                                <li><a class="dropdown-item" href="/Home#running">Giày Nike</a></li>
                                <li><a class="dropdown-item" href="/Home#training">Giày Puma</a></li>
                                <li><a class="dropdown-item" href="/">Giày LuisVuiton</a></li>
                                <li><a class="dropdown-item" href="/">Giày Christant Dior</a></li>
                                <li><a class="dropdown-item" href="/">Giày Balenciaga</a></li>
                                <li><a class="dropdown-item" href="/">Giày Vans</a></li>
                                <li><a class="dropdown-item" href="/">Giày Adidas</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="/Home">Tất cả sản phẩm</a></li>
                            </ul>
                    </div>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/AnotherPage/Contact">Liên hệ</a>
                    </li>

                    <li><a href="/AnotherPage/About" class="nav-link">Về chúng tôi</a></li>

                </ul>

                <!-- RIGHT AREA -->
                <div class="d-flex align-items-center gap-3">

                    <!-- SEARCH -->
                    <form class="d-flex d-none d-lg-flex">
                        <input class="form-control" type="search" placeholder="Tìm kiếm..." />
                    </form>

                    <!-- CART ICON -->
                    <div class="cart position-relative">
                        <span id="cart-count" class="cart-count">0</span>
                        <a class="cart-icon fs-4 text-dark" href="/Cart/Cart">🛒</a>
                    </div>

                    <!-- USER AREA -->
                    @{
                        var name = Context.Session.GetString("UserName");
                        var role = Context.Session.GetString("Role");
                    }

                    @if (name == null)
                    {
                        <a href="/Auth/Login" class="btn btn-outline-primary btn-sm">Đăng nhập</a>
                        <a href="/Auth/Register" class="btn btn-primary btn-sm">Đăng ký</a>
                    }
                    else
                    {
                        <div class="dropdown">
                            <button class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown">
                                👤 @name
                            </button>
                            @if (role == "Admin") {
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/User/Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="/Admin/Index">Trang quản trị viên</a></li>
                                <li><a class="dropdown-item" href="/Auth/Logout">Đăng xuất</a></li>
                            </ul>
                            }
                            else {
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="/User/Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" href="/Auth/Logout">Đăng xuất</a></li>
                            </ul>
                            }
                        </div>
                    }
                </div>

            </div>
        </div>
    </nav>
    

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <!-- FOOTER -->
    <footer class="footer">
        <div class="container footer-container">

            <div class="footer-col">
                <h4>About Us</h4>
                <p>Website bán giày thể thao hiện đại, mang đến trải nghiệm mua sắm nhanh chóng – tiện lợi – chất lượng.
                </p>
            </div>

            <div class="footer-col">
                <h4>Liên Kết Nhanh</h4>
                <ul>
                    <li><a href="/Home">Trang Chủ</a></li>
                    <li><a href="/Product">Sản Phẩm</a></li>
                    <li><a href="/Contact">Liên Hệ</a></li>
                    <li><a href="/Cart">Giỏ Hàng</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Hỗ Trợ</h4>
                <ul>
                    <li><a href="#">Chính sách đổi trả</a></li>
                    <li><a href="#">Chính sách bảo mật</a></li>
                    <li><a href="#">Điều khoản dịch vụ</a></li>
                    <li><a href="#">Hướng dẫn mua hàng</a></li>
                </ul>
            </div>

            <div class="footer-col">
                <h4>Social</h4>
                <div class="social-links">
                    <a href="#"><i class="fab fa-facebook"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                    <a href="#"><i class="fab fa-tiktok"></i></a>
                    <a href="#"><i class="fab fa-youtube"></i></a>
                </div>
            </div>

        </div>

        <div class="footer-bottom">
            © 2025 SneakerShop. Designed by Phát.
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>